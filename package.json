{
  "name": "shadow-scribe",
  "version": "1.0.0",
  "description": "A Firefox browser extension that applies dark mode styling to Proton Docs documents",
  "main": "background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.test\\.js$",
    "test:pbt": "jest --testPathPattern=\\.pbt\\.js$",
    "lint": "eslint .",
    "format": "prettier --write .",
    "package": "web-ext build --source-dir=dist"
  },
  "keywords": [
    "firefox",
    "extension",
    "dark-mode",
    "proton-docs",
    "webextension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.0.0",
    "fast-check": "^3.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "sharp": "^0.34.5",
    "style-loader": "^3.3.3",
    "web-ext": "^9.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
